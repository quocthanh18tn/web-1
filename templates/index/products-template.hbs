<div class='row text-center py-5'>
  {{#each data}}
    <div class='col-lg-3 col-md-6 col-sm-12'>
      <img
        src='{{imagepath}}'
        alt='{{name}}'
        onmouseover="setActiveImagePath(this, '{{imagepath}}')"
        onmouseout="setActiveImagePath(this, '{{imagepath}}', false)"
      />
      <h3>{{name}}</h3>
      <p class="text-black-50">{{summary}}</p>
      <a
        href='#products/{{id}}'
        class='readmore btn btn-link pt-0'
        onclick="loadDetails('products/{{id}}', 'details-template', 'content')"
      >Read more</a>
    </div>
  {{/each}}
</div>